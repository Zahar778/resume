{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    <main>
    {{#with main}}
        <section>
            {{> title data="All skills"}}
      <ul>
        {{#each skills}}
        <li>
            {{name}}

            {{#if point includeZero=true}} ({{point}}) {{/if}}
            {{#if isTop}} (Top) {{/if}}

            {{#unless point includeZero=true}} (не вивчаэмо) {{/unless}}
            {{#unless point}} 
            {{#if point includeZero=true}} 
                (Зараз вивчаю) 
            {{/if}} 
            {{/unless}}
        </li>
        {{/each}}
      </ul>
      </section>
      {{/with}}

      <div>
        {{#with main}}
        <section>
          <h1>My hobbies</h1>
          <ul>
            {{#each hobbies}}
            <li>
            {{name}} 

            {{#if isMain includeZero=true}} (favourite) {{/if}}
            </li>
          {{/each}}
          </ul>
          
        </section>
        {{/with}}
      </div>

    </main>

</div>

