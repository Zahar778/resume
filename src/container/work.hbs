{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <section>
            {{> title data="Work history" big=true}}
            <div>
                <ul>
                {{#each works}}
<li>
    <div>

         {{position}} 
         
         </div>

        <br>

    <div>   
            {{duration.from}} - 
            {{#if dueation.to}} 
            {{duration.to}} 
            {{else}} 
            (до сих пор тут работаю)
            {{/if}} 
    </div>

    <br>

    <div>
            {{#if company.url}}
            <a href="{{company.url}}">{{company.name}}</a>
            {{else}}
            <b>{{company.name}}</b>
            {{/if}}
    </div>

    <br>
    <br>

    <div>
        <strong> Projects ({{projectAmount}})
        </strong>
    </div>

    <br>

    <ul>
        {{#each projects}}
        <li>
            <div> {{> link text=name href=url blank=true noLine=true}}</div>
            <br>
            
                <div>
                <section>
                            <h1>{{about}}</h1>
                        <br>
                        <br>
                        <em>Project stacks</em>
                        <br>
                        ({{stackAmoGnt}})
                        <ul>
                            {{#each stacks}}
                        <li>
                            {{name}}
                        </li>
                            {{/each}}
                        </ul> 
                </section>
                <section>
                        <br>
                        <br>
                        <em>“Project awards”</em>
                        
                        <ul>
                            {{#each awards}}
                        <li>
                            {{name}}
                        </li>
                            {{/each}}
                        </ul> 
                </section>
                            {{/each}}
                        
                        <br>

                {{/each}}
            </ul>
            </div>

        </section>

    </main>
    {{/with}}
</div>

